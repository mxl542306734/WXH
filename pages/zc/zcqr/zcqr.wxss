.zcqr_section{
  margin: 0;
  padding:0;
  background-color: #ffffff;
  height: 100%;
}
.zcqr_ts_section{
    padding: 10px 0px 10px 10px;
    font-size: 13px;
    color: #8e8e8e;
}
.zcqr_yzm_section{
    width: 100%;
    height: 50px;
    line-height: 50px;
    background: #ffffff;
    overflow: hidden;
    border-top:1px solid #bfbfbf;
    padding: 0 0 0 10px;
    transition: border 1s ease 0s;
}
.zcqr_yzm_section label{
  width:20%;
  display:inline-block;
  overflow: hidden;
}
.zcqr_yzm_section input{
  width:53%;
  display:inline-block;
  overflow: hidden;
  height: 50px;
  line-height: 50px;
}
.zcqr_yzm_section button{
  width:27%;
  display:inline-block;
  overflow: hidden;
  height: 50px;
  background-color: #f35545;
  color:#ffffff;
  line-height: 50px;
  font-size:14px;
  margin:0;
  border-radius:0;
}
.zcqr_qr_section view{
  width:90%;
  margin:0 auto;
}
.zcqr_qr_section view button{
  background-color: #f35545;
  color:#ffffff;
  outline: none;
  font-size:14px;
  padding:5px 0;
}