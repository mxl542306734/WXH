.weui-navbar__slider {
  width: 50%;
  background-color: #e54;
}

.weui-navbar__item.weui-bar__item_on {
  color: #e54;
}

.item {
  width: 100%;
  padding: 16rpx 0;
  /* background-color: aqua; */
}

.sepline {
  width: 100%;
  height: 20rpx;
  background-color: #ededed;
}

.item_top {
  padding: 8rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 11pt;
}

.item_mid {
  height: 140rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
  border-bottom: 2rpx solid #b9b9b9;
}

.describe {
  font-size: 10pt;
  color: #8e8e8e;
  text-align: center;
  margin-top: 10rpx;
}

.count {
  font-size: 14pt;
  color: #353535;
  text-align: center;
}

.countColor {
  color: #ff4138;
}

.item_bot {
  padding: 0 30rpx;
  display: flex;
  height: 64rpx;
  justify-content: space-between;
  font-size: 10pt;
  color: #1f262e;
  line-height: 64rpx;
}
