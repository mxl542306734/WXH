.noCard {
  width: 100%;
  height: 180rpx;
  background-color: white;
  text-align: center;
  line-height: 180rpx;
  font-size: 12pt;
}

.cardItem {
  width: 94%;
  height: 150rpx;
  margin: 20rpx auto;
  border-radius: 40rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cardImg {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  line-height: 140rpx;
  text-align: center;
}

image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}